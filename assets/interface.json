{
    "interface_version": 2,
    "name": "MaaEnd",
    "description": "MaaEnd 终末地小助手，绝赞开发中！",
    "version": "v0.0.1",
    "contact": "misc/CONTACT.md",
    "license": "LICENSE",
    "welcome": "README.md",
    "icon": "misc/MaaEnd-Tiny-64.png",
    "github": "https://github.com/MaaEnd/MaaEnd",
    "mirrorchyan_rid": "MaaEnd",
    "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "ADB",
            "label": "模拟器",
            "type": "Adb"
        },
        {
            "name": "Win32",
            "label": "PC",
            "type": "Win32",
            "win32": {
                "class_regex": "UnityWndClass",
                "window_regex": "Endfield",
                "screencap": "FramePool",
                "mouse": "SendMessageWithCursorPos",
                "keyboard": "SendMessageWithCursorPos"
            },
            "permission_required": true
        },
        {
            "name": "PlayCover",
            "type": "PlayCover"
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        },
        {
            "name": "B 服",
            "path": [
                "./resource",
                "./resource_bilibili"
            ]
        }
    ],
    // 可选的 agent 示例
    // "agent": {
    //     "child_exec": "python",
    //     "child_args": [
    //         "./agent/main.py"
    //     ]
    // },
    "task": [
        {
            "name": "普通任务",
            "entry": "MyTask1",
            "default_check": true
        },
        {
            "name": "选项任务",
            "entry": "MyTask2",
            "option": [
                "任务选项1"
            ],
            "default_check": true
        },
        {
            "name": "参数任务",
            "entry": "MyTask3",
            "option": [
                "任务选项1"
            ],
            "pipeline_override": {}
        },
        {
            "name": "带Custom的任务",
            "entry": "MyTask4"
        }
    ],
    "option": {
        "任务选项1": {
            "type": "select",
            "cases": [
                {
                    "name": "文本1",
                    "pipeline_override": {
                        "OcrTask": {
                            "text": "文本1"
                        }
                    }
                },
                {
                    "name": "文本2",
                    "pipeline_override": {
                        "OcrTask": {
                            "text": "文本2"
                        }
                    }
                }
            ]
        }
    }
}
